base-primary = #12a19a
base-text = #3c3c3b
secondary = #f39200
secondary-text = #A6A6A6
bg-color = #f1f1f1
base-border-color = #D0D0D1

body
  background-color bg-color
  color base-text
  font 16px / 24px "Ubuntu-regular", "Arial", Sans-serif

a
  color base-text

.pointer
  cursor pointer

  .link:after
    display block
    content " "
    width 20%
    height 1px
    background none

.username
  width 150px
  height 10px

  .grad
    margin-top 2px

  &:hover
    > .grad
      background linear-gradient(to right, #12A19A 40%, transparent)
      height 1px
      width 150px

.avatar
  border-radius 50px
  border 2px solid base-primary
  padding 1px

  &.form-small
    height 36px
    width 36px
    border 1px solid base-primary

  &.form-medium
    height 74px
    width 74px

.title h2
  margin 0
  font-size 24px

.sub-title
  min-height 25px

  h3
    font-size 18px
    color base-text

.line
  color #d4d5d5
  size 1px

/*
  Styling buttons
*/
.for-test
  margin-top 10px

.button
  cursor pointer
  font 16px / 40px "Ubuntu-Regular"
  text-align center
  width 160px
  box-sizing border-box

  &:active, &:hover, &:focus
    outline 0
    outline-offset 0

  &:active
    background-color

  &.white
    background-color #fff

    a
      color base-text

  &.mint
    a
      color white

    font-size 16px
    background-color base-primary

  &.dark-grey
    a
      color white

    font-size 16px
    background-color base-text
    border-radius 20px
    width 128px
    height 40px

  &.form-circle
    border-radius 20px

  &.form-square
    border-radius 7px

.page-control
  display flex
  justify-content space-between
  align-items center

/*
  Styling buttons End
*/
section.search
  display flex
  align-items center
  justify-content space-around
  background-color #fff
  padding 30px

  .input-search
    margin-left 24px
    font-size 18px
    color #3c3c3c
