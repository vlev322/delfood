.slider
	display flex
	align-items center
	position relative
	overflow hidden

.layer-overley::before
	content ""
	position absolute
	top 0
	left 0
	width 100%
	height 100%
	background-color #001E2D
	opacity 0.4

.slider-slide
	width 100%
	height 100vh
	transition all 0.4s cubic-bezier(0.455, 0.03, 0.515, 0.955)

.slider-img .slider .slider-slide
	width 50vw
	height 50vh

.arrow
	font-size 60px
	position relative
	cursor pointer
	transition all 0.5s ease
	color #C6DBEB
	z-index 1

	&:hover
		color #fff
		font-size 65px

	&-left:before, &-rigth:after
		position absolute

	&-left:before
		content "\003C"
		left 10px

	&-rigth:after
		content "\003E"
		right 10px
