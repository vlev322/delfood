.slider
	display flex
	align-items center
.slider-slide
	width 100%
	height 550px
	transition all 0.4s cubic-bezier(0.455, 0.03, 0.515, 0.955)

.arrow
	font-size 60px
	position relative
	cursor pointer
	transition all 0.5s ease

	&:hover
		color #fff
		font-size 65px

	&-left:before, &-rigth:after
		position absolute

	&-left:before
		content "\003C"
		left 10px

	&-rigth:after
		content "\003E"
		right 10px
