.menu
	top 50px
	background-color #ffffff
	font-size 22px
	z-index 2
	padding-right 20px
	border-radius 8px
	padding 10px

	>ul
		display flex
		list-style-type none
		padding 0

		li
			cursor pointer
			position relative

			a
				color #0C232F

				&:hover
					color #22A6F2

			ul
				position absolute
				list-style-type none
				display none
				background-color #fff
				text-align center
				padding 10px
				border-radius 8px
				z-index 2
				border 1px solid #000

				li
					margin-bottom 3px
					padding 5px 0
					border-bottom 1px solid #000

					&:hover
						a
							color #22A6F2

			&:hover >ul
				display block

		>li
			&:before
				content "|"
				margin 0 25px

			&:first-child
				margin-left 50px

				&:before
					content none

.dropdown
	position relative

	&:after
		content "\21A9"
		position absolute
		right -15px
		top 15px