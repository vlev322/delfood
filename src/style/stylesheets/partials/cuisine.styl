.cuisines, .days
  display flex
  justify-content space-between
  align-items center
  transition all 1.5s ease
  height 300px
  overflow-y auto

.cuisines
  flex-direction column

.days > div
  cursor pointer

.meals
  display flex
  flex-direction column
  align-items center
  justify-content center

  div
    border-bottom 1px solid #000
    padding 5px