.cuisines, .days > div
  display flex
  justify-content space-between
  transition all 1.5s ease
  height 80vh
  overflow-y auto
  padding 10vh 5vw

.cuisines
  flex-direction column
  align-items center
  max-width 40%
  margin 0 auto
  position relative
  background burlywood
  transition all 1.5s ease
  padding-bottom 100px
  opacity .95

  &::-webkit-scrollbar
    width 0

  &-title
    display flex
    align-items center
    justify-content center
    text-transform uppercase
    font-style italic
    letter-spacing 4px
    background wheat

  div
    border-bottom 1px solid #fff

    &:first-child
      border-bottom none

    section
      display flex
      align-items center
      justify-content center

    img
      height 200px

    h1
      color #ffffff
      text-align center
      letter-spacing 2px

      &:first-letter
        text-transform uppercase

    a
      display flex
      align-items center
      justify-content center
      font-size 17px
      transition all 1s ease
      color #ffffff

      &:hover
        font-style italic
        color wheat

.days
  > div
    transition all 1.5s ease

    a
      color #000
      font-size 25px
      padding 5px 15px
      background-color #fff
      border-radius 8px
      transition all 0.5s ease

      &:hover
        background-color #F5DEB3

.meals
  display flex
  flex-direction column
  align-items center
  transition all 1.5s ease
  height 70vh
  margin-top -75vh

  >div
    border-radius 10px
    overflow scroll
    background-color #fff
    opacity 0.8
    padding 5px

    &::-webkit-scrollbar
      width 0

  div > div
    padding 10px
    border-bottom 1px solid #000
    border-radius 10px
    padding-left 10%
    padding-right 10%

    h3
      text-align center
      font-size 18px

    span
      font-weight bold

.scrollWrapper
  position absolute
  right 10px
  top 70px

.buy-btn
  padding 1em 3em
  border 3px solid #DEB887
  transition all 300ms ease
  box-shadow 0px 4px 10px 2px rgba(black, 0.2)
  text-decoration none
  font-weight 500
  position relative
  color #4A4A4A
  display inline-block
  cursor pointer

  &:before
    position absolute
    content ""
    width 0%
    height 100%
    background #DEB887
    top 0
    left auto
    right 0
    z-index -1
    transition all 300ms ease

  &:hover
    color white
    box-shadow none

    &:before
      position absolute
      content ""
      width 100%
      height 100%
      background #DEB887
      top 0
      left 0
      right 0
      z-index -1

.btn-wrapper
  padding-bottom 2em